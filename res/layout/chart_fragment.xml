<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >


        <Button android:id="@+id/title"
                  android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:text="Some chart .."
                  android:background="@color/some_blue"
            />
    <!-- android:onClick="doRefresh" is not possible here on fragment level, as the Activity is the receiver and not the Fragment -->
    <org.rhq.pocket.ChartView
              android:id="@+id/chart_view"
              android:layout_height="320dp"
              android:layout_width="360dp"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:layout_below="@id/title"
              />

</LinearLayout>