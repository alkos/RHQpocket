<TabHost android:id="@android:id/tabhost"
         android:layout_width="fill_parent"
         android:layout_height="fill_parent"
         xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
    			  android:orientation="horizontal"
    			  android:layout_width="fill_parent"
        	      android:layout_height="fill_parent"
    			  android:padding="2dp"
  			  >

        <fragment android:name="org.rhq.pocket.ResourceListFragement"
                  android:id="@+id/resource_list_fragment"
                  android:layout_height="match_parent"
                  android:layout_width="wrap_content"
                  />
        <fragment android:name="org.rhq.pocket.ScheduleListFragement"
                  android:id="@+id/schedule_list_fragment"
                  android:layout_height="match_parent"
                  android:layout_width="wrap_content"
                  />

        <fragment android:name="org.rhq.pocket.ChartFragment"
                  android:id="@+id/chart_fragment"
                  android:layout_height="420dp"
                  android:layout_width="600dp"
                  />
